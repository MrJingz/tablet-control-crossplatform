<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.feixiang</groupId>
    <artifactId>tablet-control-crossplatform</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <name>Tablet Control - Cross Platform</name>
    <description>飞象中控应用程序 - 跨平台版本 (Windows/macOS/Linux/Android/iOS)</description>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        
        <!-- JavaFX 版本 (JDK11兼容) -->
        <javafx.version>11.0.2</javafx.version>

        <!-- Gluon Mobile 版本 (最新版本，支持Maven 3.9+) -->
        <gluonfx.version>1.0.27</gluonfx.version>
        <gluonfx.target>host</gluonfx.target>

        <!-- Android 构建配置 -->
        <android.sdk.path>${env.ANDROID_HOME}</android.sdk.path>
        <android.ndk.path>${env.ANDROID_NDK_HOME}</android.ndk.path>
        <android.api.level>30</android.api.level>
        <android.min.sdk>21</android.min.sdk>
        <android.target.sdk>30</android.target.sdk>
        
        <!-- 依赖版本 -->
        <javafx.version>11.0.2</javafx.version>
        <jackson.version>2.15.2</jackson.version>
        <gson.version>2.10.1</gson.version>
        <slf4j.version>2.0.16</slf4j.version>
        <logback.version>1.3.15</logback.version>
        <junit.version>5.8.2</junit.version>
        
        <!-- 应用程序配置 -->
        <main.class>com.feixiang.tabletcontrol.CrossPlatformApp</main.class>
        <app.name>TabletControl</app.name>
        <app.version>1.0.0</app.version>
    </properties>

    <dependencies>
        <!-- JavaFX 依赖 -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- Gluon Mobile 核心依赖 -->
        <dependency>
            <groupId>com.gluonhq</groupId>
            <artifactId>charm-glisten</artifactId>
            <version>6.2.0</version>
        </dependency>
        
        <!-- Gluon Attach (平台特定功能) -->
        <dependency>
            <groupId>com.gluonhq.attach</groupId>
            <artifactId>display</artifactId>
            <version>4.0.18</version>
        </dependency>
        
        <dependency>
            <groupId>com.gluonhq.attach</groupId>
            <artifactId>lifecycle</artifactId>
            <version>4.0.18</version>
        </dependency>
        
        <dependency>
            <groupId>com.gluonhq.attach</groupId>
            <artifactId>statusbar</artifactId>
            <version>4.0.18</version>
        </dependency>
        
        <dependency>
            <groupId>com.gluonhq.attach</groupId>
            <artifactId>storage</artifactId>
            <version>4.0.18</version>
        </dependency>

        <!-- JSON 处理 -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson.version}</version>
        </dependency>

        <!-- 日志框架 -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>

        <!-- 测试依赖 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Maven 编译插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <!-- Gluon Mobile 插件 -->
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
                <version>${gluonfx.version}</version>
                <configuration>
                    <target>${gluonfx.target}</target>
                    <mainClass>${main.class}</mainClass>
                    <verbose>true</verbose>
                    <!-- 明确指定 GraalVM 路径 -->
                    <graalvmHome>E:/graalvm-ce-java11-windows-22.3.3</graalvmHome>
                    
                    <!-- 运行时参数 -->
                    <runtimeArgs>
                        <list>-Dfile.encoding=UTF-8</list>
                        <list>-Duser.language=zh</list>
                        <list>-Duser.country=CN</list>
                    </runtimeArgs>
                    
                    <!-- 资源配置 -->
                    <resourcesList>
                        <list>.*\.json$</list>
                        <list>.*\.properties$</list>
                        <list>.*\.fxml$</list>
                        <list>.*\.css$</list>
                        <list>.*\.(png|jpg|jpeg|gif|bmp)$</list>
                    </resourcesList>
                    
                    <!-- 反射配置 -->
                    <reflectionList>
                        <list>com.feixiang.tabletcontrol.core.model.*</list>
                        <list>com.feixiang.tabletcontrol.core.service.*</list>
                        <list>com.feixiang.tabletcontrol.ui.*</list>
                        <list>com.feixiang.tabletcontrol.platform.*</list>
                        <list>com.fasterxml.jackson.databind.*</list>
                        <list>com.google.gson.*</list>
                        <list>javafx.scene.control.*</list>
                        <list>javafx.scene.layout.*</list>
                    </reflectionList>

                    <!-- JNI 配置 -->
                    <jniList>
                        <list>java.lang.System</list>
                        <list>java.io.File</list>
                        <list>java.nio.file.*</list>
                    </jniList>


                    
                    <!-- 平台特定配置 -->
                    <bundlesList>
                        <list>com.feixiang.tabletcontrol.i18n.messages</list>
                    </bundlesList>
                </configuration>
            </plugin>

            <!-- 资源插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <!-- 测试插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M7</version>
            </plugin>

            <!-- JAR 插件 - 设置主类 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main.class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Exec 插件 - 用于运行应用程序 -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>${main.class}</mainClass>
                    <args>
                        <arg>--add-opens</arg>
                        <arg>javafx.graphics/com.sun.javafx.application=ALL-UNNAMED</arg>
                    </args>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- 构建配置文件 -->
    <profiles>
        <!-- Windows 构建 -->
        <profile>
            <id>windows</id>
            <properties>
                <gluonfx.target>windows</gluonfx.target>
            </properties>
        </profile>
        
        <!-- macOS 构建 -->
        <profile>
            <id>mac</id>
            <properties>
                <gluonfx.target>mac</gluonfx.target>
            </properties>
        </profile>
        
        <!-- Linux 构建 -->
        <profile>
            <id>linux</id>
            <properties>
                <gluonfx.target>linux</gluonfx.target>
            </properties>
        </profile>
        
        <!-- Android 构建 -->
        <profile>
            <id>android</id>
            <properties>
                <gluonfx.target>android</gluonfx.target>
            </properties>
        </profile>
        
        <!-- iOS 构建 -->
        <profile>
            <id>ios</id>
            <properties>
                <gluonfx.target>ios</gluonfx.target>
            </properties>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>gluon-nexus</id>
            <url>https://nexus.gluonhq.com/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>gluon-nexus</id>
            <url>https://nexus.gluonhq.com/nexus/content/repositories/releases/</url>
        </pluginRepository>
    </pluginRepositories>
</project>
